{% spaceless %}
{% import "ent/foundation.twig" as ent %}
<!doctype html>
<html {{ site.language_attributes }} class="no-js">
<head>
    <meta charset="{{ site.charset }}">
    <title>
        {% if wp_title %}
            {{ wp_title }} - {{ site.name }}
        {% else %}
            {{ site.name }}
        {% endif %}
    </title>
    <meta name="description" content="{{ site.description }}">
    <link rel="stylesheet" href="{{ asset('main.css') }}">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="pingback" href="{{ site.pingback_url }}">
    {{ wp_head }}
</head>
<body class="{{ body_class }}">
    <header class="mu-header header-a">
        <div class="header-a__logo-wrapper" data-mu-fixed="small medium">
            <div class="row column mu-header__row mu-header__row--logo">
                <a class="mu-header__logo" href="{{ site.link }}"><h1>Company Name</h1></a>
                <div class="mu-header__hover show-for-large">
                    <ul class="mu-header__alt-menu">
                        <li><a href="#">ES</a></li>
                        <li><a href="#">CA</a></li>
                        <li><a href="#">EN</a></li>
                    </ul>
                    <ul class="mu-header__alt-menu mu-header__alt-menu--separator">
                        <li><a href="#"><i class="fa fa-fw fa-linkedin"></i></a></li>
                        <li><a href="#"><i class="fa fa-fw fa-twitter"></i></a></li>
                        <li><a href="#"><i class="fa fa-fw fa-facebook"></i></a></li>
                    </ul>
                    <ul class="mu-header__alt-menu mu-header__alt-menu--separator">
                        <li><a href="#"><i class="fa fa-fw fa-search"></i></a></li>
                    </ul>
                </div>
                <div class="mu-header__hover mu-header__hover--middle hide-for-large">
                    <a class="mu-header__hamburger"><i class="fa fa-fw fa-bars"></i></a>
                </div>
            </div>
        </div>
        <div class="header-a__menu-wrapper" data-mu-fixed="large">
            <div class="row column show-for-large">
                {{ ent.menu(main_menu, 'menu') }}
            </div>
        </div>
    </header>
