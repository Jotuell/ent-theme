<div class="team-misc mu-bg--neutral">
    <div class="row">
        <div class="small-12 medium-6 columns medium-order-2 team-cta align-middle">
            <h4 class="team-cta__title">{{ cta_text }}</h4>
            <a class="button button--square button--black-neutral" href="{{ cta_link.url }}">{{ cta_link.title }}</a>
        </div>
        <div class="small-12 medium-6 columns medium-order-1">
            <h4>{{ __('team.collaborators') }}</h4>
            <ul class="mu-icon-list">
                {% for collaborator in collaborators %}
                    <li class="mu-icon-list__entry">
                        <i class="fa fa-chevron-right"></i><strong>{{ collaborator.name }} {{ collaborator.surname }}</strong>{% if collaborator.position %}<span> // {{ collaborator.position }}</span>{% endif %}
                        <br>{{ collaborator.bio }}
                        <ul class="mu-icon-list mu-icon-list--horizontal team-collaborator__social">
                            {% if collaborator.linkedin %}<li class="mu-icon-list__entry"><a href="{{ collaborator.linkedin }}"><i class="fa fa-linkedin"></i></a></li>{% endif %}
                            {% if collaborator.twitter %}<li class="mu-icon-list__entry"><a href="{{ collaborator.twitter }}"><i class="fa fa-twitter"></i></a></li>{% endif %}
                            {% if collaborator.instagram %}<li class="mu-icon-list__entry"><a href="{{ collaborator.instagram }}"><i class="fa fa-instagram"></i></a></li>{% endif %}
                            {% if collaborator.pinterest %}<li class="mu-icon-list__entry"><a href="{{ collaborator.pinterest }}"><i class="fa fa-pinterest-p"></i></a></li>{% endif %}
                        </ul>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
